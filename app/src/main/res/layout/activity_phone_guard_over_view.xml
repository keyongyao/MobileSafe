<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bcb9b9"
    android:orientation="vertical"
    tools:context="com.kk.mymobilesafe.activity.PhoneGuardOverViewActivity">

    <TextView
        style="@style/Title_style"
        android:text="手机防盗状态" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_phonGuardOverView_safenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="13178660900"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/listview_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_phonGuardOverView_lockstateMemo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="防盗保护开启状态"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_phonGuardOverView_lockstate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/lock" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/listview_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_phoneGuardOverView_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/btn_click_sytle"
            android:text="重新进入设置" />

    </LinearLayout>

    <Button
        style="@style/setting_item_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="功能简介"
        android:textSize="20sp" />

    <TextView
        style="@style/phoneGuard_overView_function_item"
        android:text="GPS追踪：#*location*#" />

    <TextView
        style="@style/phoneGuard_overView_function_item"
        android:text="播放报警音乐：#*alarmMusic*#" />

    <TextView
        style="@style/phoneGuard_overView_function_item"
        android:text="远程删除数据：#*wipedata*#" />

    <TextView
        style="@style/phoneGuard_overView_function_item"
        android:text="远程锁屏：#*lockscreen*#" />


</LinearLayout>
