<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_atools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d5ec94"
    android:orientation="vertical"
    tools:context="com.kk.mymobilesafe.activity.AToolsActivity">

    <TextView
        style="@style/Title_style"
        android:text="高级工具" />

    <TextView
        android:id="@+id/tv_atool_queryLocation"
        style="@style/phoneGuard_overView_function_item"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_box"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="归属地查询" />

    <TextView
        android:id="@+id/tv_atool_SMSbackup"
        style="@style/phoneGuard_overView_function_item"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_box"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="短信备份" />

    <TextView
        android:id="@+id/tv_atool_query_phoneNum"
        style="@style/phoneGuard_overView_function_item"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_box"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="常用号码查询" />

    <TextView
        android:id="@+id/t_atool_applock"
        style="@style/phoneGuard_overView_function_item"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_box"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="程序锁" />


</LinearLayout>
