<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_black_num"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kk.mymobilesafe.activity.BlackNumActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Title_style"
            android:background="#9600ff00"
            android:gravity="left"
            android:text="黑名单管理"
            android:textSize="38sp" />

        <Button
            android:id="@+id/btn_blcknum_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#6fff"
            android:text="添加" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_blacknum_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>
