<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_app_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kk.mymobilesafe.activity.AppManagerActivity">

    <TextView
        style="@style/Title_style"
        android:text="软件管理" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_appManager_interStorage_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="可用内部存储："
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_appManager_extralStorage_available"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="可用TFcard存储："
            android:textSize="13sp" />
    </LinearLayout>

    <!--  <TextView
          android:id="@+id/tv_appmanager_showAppTypeCount"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/gradient_box"
          android:text="用户程序：89" />-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/lv_appManager_applistview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <TextView
            android:id="@+id/tv_appmanager_showAppTypeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_box"
            android:text="用户程序：89" />


    </FrameLayout>


</LinearLayout>
