<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/local_popup_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_appmanager_popupWindow_uninstall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/img1"
        android:gravity="center"
        android:text="卸载" />

    <TextView
        android:id="@+id/tv_appmanager_popupWindow_start"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/img2"
        android:gravity="center"
        android:text="启动" />

    <TextView
        android:id="@+id/tv_appmanager_popupWindow_share"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/img3"
        android:gravity="center"
        android:text="分享" />
</LinearLayout>
